{
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSources": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"sourceMap": true,
		"target": "es5",
	  	"lib": [ "es2015", "dom" ],
		"watch": false,
		"noEmit": true,
		"baseUrl": "./src",
		"rootDir": "src",
        "outDir": "lib"
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "./src/**/*.{ts,js}",
    "./typings/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}