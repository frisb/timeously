{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "es2015",
    "watch": true,
    "lib": [
      "es2015"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}